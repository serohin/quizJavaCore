<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <resource-ref>
        <res-ref-name>jdbc/QuizDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <!--SERVLETS-->
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.kamazz.quiz.controller.SectionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/section.do</url-pattern>
    </servlet-mapping>
    <!--theme by sectionId-->
    <servlet>
        <servlet-name>ThemeController</servlet-name>
        <servlet-class>com.kamazz.quiz.controller.ThemeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ThemeController</servlet-name>
        <url-pattern>/theme.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>QuizController</servlet-name>
        <servlet-class>com.kamazz.quiz.controller.QuizController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuizController</servlet-name>
        <url-pattern>/quiz.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>QuestionController</servlet-name>
        <servlet-class>com.kamazz.quiz.controller.QuestionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestionController</servlet-name>
        <url-pattern>/question.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterUserController</servlet-name>
        <servlet-class>com.kamazz.quiz.controller.RegisterUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterUserController</servlet-name>
        <url-pattern>/registerNewUser.do</url-pattern>
    </servlet-mapping>

    <!--FILTERS-->
    <filter>
        <filter-name>endQuizFilter</filter-name>
        <filter-class>com.kamazz.quiz.filter.EndQuizFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>endQuizFilter</filter-name>
        <url-pattern>/endquiz.do</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>securituFilter</filter-name>
        <filter-class>com.kamazz.quiz.filter.MainSecurituFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>securituFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.kamazz.quiz.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/login.do</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>logoutFilter</filter-name>
        <filter-class>com.kamazz.quiz.filter.LogoutFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>logoutFilter</filter-name>
        <url-pattern>/logout.do</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>com.kamazz.quiz.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!--LISTENERS-->
    <listener>
        <listener-class>com.kamazz.injection.AppContext</listener-class>
    </listener>
    <!-- по ключу 'applicationContextConfigLocation' из ServletContext можно вычитать путь к конфигурационному файлу Spring -->
    <!-- String appCtxPath = ServletContext().getInitParameter("applicationContextConfigLocation"); -->
    <!-- Так делает DependencyInjectionServlet, что бы узнать, где лежит файл с конфигурацией для Spring -->
    <context-param>
        <param-name>applicationContextConfigLocation</param-name>
        <param-value>/appContextConfig.xml</param-value>
    </context-param>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/view/404error.jsp</location>
    </error-page>
    <error-page>
        <!--<exception-type>javax.servlet.ServletException</exception-type>-->
        <error-code>500</error-code>
        <location>/WEB-INF/view/ServletException.jsp</location>
    </error-page>
    <error-page>
        <exception-type>com.kamazz.quiz.dao.exception.NoSuchEntityException</exception-type>
        <location>/WEB-INF/view/NoSuchEntityException.jsp</location>
    </error-page>
    <welcome-file-list>
        <welcome-file>/WEB-INF/view/index.jsp</welcome-file>
    </welcome-file-list>

</web-app>